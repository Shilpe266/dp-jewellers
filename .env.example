# Firebase Configuration
# Get these values from Firebase Console → Project Settings → Your Apps

# Admin Panel (Next.js) - prefix with NEXT_PUBLIC_
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=dp-jewellers.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=dp-jewellers
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=dp-jewellers.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id_here

# Server-side Firebase Admin SDK (for Cloud Functions)
FIREBASE_ADMIN_PROJECT_ID=dp-jewellers
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk@dp-jewellers.iam.gserviceaccount.com
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour_Private_Key_Here\n-----END PRIVATE KEY-----\n"

# Payment Gateway (for future)
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# SMS Gateway (for OTP)
SMS_API_KEY=

# Other
NODE_ENV=development